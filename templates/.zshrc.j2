# This file is auto-generated by ansible, make changes to ~/.zshrc.personal if needed

# Setup some standard paths
export PATH=$HOME/bin:/usr/local/bin:$PATH

# Android SDK path (if you still need it)
export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=${PATH}:${ANDROID_HOME}/tools:${ANDROID_HOME}/platform-tools

# Homebrew paths
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin:$PATH"

# Ruby setup (if using rbenv)
eval "$(rbenv init -)"

# Python setup (if using pyenv)
export PYENV_ROOT="$HOME/.pyenv"
command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

# Node setup (if using nvm)
export NVM_DIR="$HOME/.nvm"
[ -s "$(brew --prefix)/opt/nvm/nvm.sh" ] && \. "$(brew --prefix)/opt/nvm/nvm.sh"
[ -s "$(brew --prefix)/opt/nvm/etc/bash_completion.d/nvm" ] && \. "$(brew --prefix)/opt/nvm/etc/bash_completion.d/nvm"

# Kitty specific settings
if [ "$TERM" = "xterm-kitty" ]; then
    alias ssh="kitty +kitten ssh"
    alias icat="kitty +kitten icat"
fi

# Starship prompt
eval "$(starship init zsh)"

# Load personal ZSH config
if [ -f ~/.zshrc.personal ]; then
    source ~/.zshrc.personal
fi

# ZSH History settings
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt appendhistory

# ZSH Completions
autoload -Uz compinit && compinit

# Useful aliases
alias ll="ls -lah"
alias update="brew update && brew upgrade"

# Git aliases
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gl="git pull"

# Directory shortcuts (customize as needed)
alias projects="cd ~/Projects"
alias work="cd ~/Work"